#!/usr/bin/env ion

if any_cards -f cards/skills.crd cards/diss.crd cards/values.crd -t main.tp -o out/skills -a 2 -d 5
    echo "Anycards Success"
else
    echo "any cards failure"
    exit
end

for x in "out/skillsf_*.svg"
    let name=$(echo "$x" | cut -f 1 -d '.') 
    inkscape -f $x -A ${name}.pdf
end

pdfunite out/skillsf_*.pdf out/all_skills.pdf


